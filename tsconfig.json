{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "commonjs",
    "target": "ES2017",
    "esModuleInterop": true,
    "allowJs": true,
    "rootDir": "./",
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"]
    }
  },
  "esModuleInterop": true,
  "experimentalDecorators": true,
  "emitDecoratorMetadata": true,
  "skipLibCheck": true,
  "forceConsistentCasingInFileNames": true,
  "resolveJsonModule": true,
  "include": ["src"]
}